<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Admin Panel</h1>

        <!-- Portfolio Section -->
        <h2 class="mb-3">Portfolio</h2>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% portfolio.forEach((item, index) => { %>
                    <tr>
                        <td><%= item.title %></td>
                        <td><%= item.description %></td>
                        <td>
                            <!-- Delete Button -->
                            <form action="/admin/portfolio/delete" method="POST" style="display:inline;">
                                <input type="hidden" name="index" value="<%= index %>">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>

                            <!-- Edit Button -->
                            <button class="btn btn-warning btn-sm" onclick="openEditForm('portfolio', <%= index %>, '<%= item.title %>', '<%= item.description %>')">Edit</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <!-- Add Portfolio Form -->
        <h3 class="mt-4">Add New Portfolio Item</h3>
        <form action="/admin/portfolio/add" method="POST" class="mb-5">
            <div class="mb-3">
                <label for="portfolioTitle" class="form-label">Title:</label>
                <input type="text" name="title" id="portfolioTitle" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="portfolioDescription" class="form-label">Description:</label>
                <textarea name="description" id="portfolioDescription" class="form-control" required></textarea>
            </div>
            <div class="mb-3">
                <label for="portfolioImage" class="form-label">Image URL:</label>
                <input type="text" name="image" id="portfolioImage" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="portfolioLink" class="form-label">Link:</label>
                <input type="text" name="link" id="portfolioLink" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Portfolio</button>
        </form>

        <!-- Blogs Section -->
        <h2 class="mt-5 mb-3">Blogs</h2>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% blogs.forEach((blog, index) => { %>
                    <tr>
                        <td><%= blog.title %></td>
                        <td><%= blog.description %></td>
                        <td>
                            <!-- Delete Button -->
                            <form action="/admin/blogs/delete" method="POST" style="display:inline;">
                                <input type="hidden" name="index" value="<%= index %>">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>

                            <!-- Edit Button -->
                            <button class="btn btn-warning btn-sm" onclick="openEditForm('blogs', <%= index %>, '<%= blog.title %>', '<%= blog.description %>')">Edit</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <!-- Add Blog Form -->
        <h3 class="mt-4">Add New Blog Post</h3>
        <form action="/admin/blogs/add" method="POST" class="mb-5">
            <div class="mb-3">
                <label for="blogTitle" class="form-label">Title:</label>
                <input type="text" name="title" id="blogTitle" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="blogDescription" class="form-label">Description:</label>
                <textarea name="description" id="blogDescription" class="form-control" required></textarea>
            </div>
            <div class="mb-3">
                <label for="blogImage" class="form-label">Image URL:</label>
                <input type="text" name="image" id="blogImage" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="blogLink" class="form-label">Link:</label>
                <input type="text" name="link" id="blogLink" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Blog</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>